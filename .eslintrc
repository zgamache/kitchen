{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true,
      "arrowFunctions": true
    }
  },
  "settings": {
    "import/parser": "babel-eslint"
  },
  "env": {
    "browser": true,
    "jest": true
  },
  "rules": {
    "semi": ["error", "never"],
    "no-console": "off",
    "arrow-parens": ["error", "as-needed"],
    "react/jsx-filename-extension": ["warn", { "extensions": [".js", ".jsx"] }],
    "react/forbid-prop-types": ["error", { "forbid": ["any", "array"] }]
  }
}
